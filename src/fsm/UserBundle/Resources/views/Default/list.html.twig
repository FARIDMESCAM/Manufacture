{% extends "fsmEchangeBundle::layout.html.twig" %}
{% block body %}
<div class ="container">
    <table class ="table table-striped table-condensed ">

        <thead >
            <tr >
                <th>Nom Utilisateur </th>
                <th>Photo principale </th>
                <th>Mail </th>
                <th> Roles </th>




        </thead>
        <tbody >
{% for user in users %}
            {% if user != null%}
            <tr>

                <td>
                    <a href="{{path('fos_user_profile_show')}}" >
{{ user.username }}</a>
                </td>
                <td>
                      {% if user.getPhotos is not null %}
           {%for photo in user.getPhotos%}
                    {% if photo.getPrincipal == TRUE %}
                    <img width="130" class="img-thumbnail" src="{{image( photo.getWebPath).resize(100,100)}}" /> 
                     {% endif %} 
          {% endfor %}
                {% endif %}
                </td>
                <td>{{ user.email }}</td>
                <td>
                   {% if user.getRoles is not null %} 
                   {%for roles in user.getRoles%}
                     {{  roles }}
                                           {% if user.getRoles|length <2 %}
                    </br>
                      <a id="PhotoDefaut"  onclick = 'photoP({{photo.id}})' idphoto= {{photo.id}} class="navbar-brand" href="#">DÃ©finir en tant que photo principale</a>
                      
            <a href="{{path('fsm_user_admin',{'id':user.id})}}" >Rendre administrateur</a><br><br>
                                          {% endif %}
                    <br/>

                    {% endfor %}
                    {% endif %}
                </td>

                {% endif %}  

            </tr>

   {% endfor %}




    </table>
</div> 


<div class ="col-lg-1"></div>
</div> 
<div class ="row-100">.</div>
</div> 

<script>
    function photoP(id1) {
        $.ajax({
            type: "POST",
            url: Routing.generate('fsm_photo_principale', {photo: id1}),
            cache: false,
            success: function(html) {
                $('#affichage_photos').empty();
                $('#affichage_photos').append(html);

            }
        });
        return false;
    }
</script>



{% endblock %}

