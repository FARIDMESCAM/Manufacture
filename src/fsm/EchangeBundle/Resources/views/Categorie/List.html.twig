{% extends "fsmEchangeBundle::layout.html.twig" %}
{% block body %}
<div class ="row-30">.</div>
<div class ="row">
    <div class ="col-lg-4"> </div> 
    <div id = "test" class ="col-lg-2">      
{% for categorie in categories %}
        <p><strong>{{categorie.nom}}</strong>
            <a id="cat"  onclick ='modifcat({{categorie.id}})' href="#">Modif</a>
        </p>
{%endfor%}
    </div>
    <div id="gestioncat" class ="col-lg-2"> 
        <p>{%include "fsmEchangeBundle:Categorie:Modif.html.twig"%}</p>
    </div>
</div>
<script>
    function modifcat(id1) {
        $.ajax({
            url: Routing.generate('fsm_categorie_modif', {id: id1}),
            cache: false,
            success: function(html) {
                $('#gestioncat').empty();
                $('#gestioncat').append(html);

            }
        });
        return false;
    }
</script>
{%endblock%}