<script>
    function periodemod(id1) {
        $.ajax({
            url: Routing.generate('fsm_periode_update', {id: id1}),
            cache: false,
            success: function(html) {
                $('#gestionperiode').empty();
                $('#gestionperiode').append(html);

            }
        });
        return false;
    }
</script>


