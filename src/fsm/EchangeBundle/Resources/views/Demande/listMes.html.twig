{% extends "fsmEchangeBundle::layout.html.twig" %}
{% block body %}
<div class ="row-30">
    <div class ="col-lg-5"></div>

    <caption>
        <h4 >Mes locations </h4 >
    </caption>
</div>
<div class ="col-lg-2"></div>

<div class ="container">
    <table class ="table table-striped table-condensed ">

        <thead >
            <tr >
              
                <th>Demandeur location</th>
                <th>Photo demandeur </th>
                <th>Photo objet </th>
                <th>Date d√©but</th>
                <th>Date fin</th>
                <th>Statut</th>
                


               
        </thead>
        <tbody >

{% for demande in demandes %}

            <tr>
     
                  <td>
                    {{demande.user.getEmail}}
                </td>
                <td>
                {%for photo in demande.user.getPhotos%}
                       {% if photo != null%}
                    {% if photo.getPrincipal == TRUE %}
                       <img width="130" class="img-thumbnail" src="{{image( photo.getWebPath).resize(100,100)}}" /> 
                    {% endif %} 
                       
                       {% endif %} 
                       {% else %}
                         <img width="30" class="img-circle" src="{{ asset('img/user.jpg') }}"  /> 
              {% endfor %}
              
                </td>
                <td>
                    <ul>
    <a id="btn-consulter-activite" href="#popupFormConsulter" role="button" data-toggle="modal"><i class="icon-edit"></i> Consulter / modifier</a>                 
    {% render(controller("fsmEchangeBundle:Demande:choix")) %}
</ul><br><br>
                </td>
                <td>
                    {%for photo in demande.getObjet.getPhotos%}
                     {% if photo != null%}
                    {% if photo.getPrincipal == TRUE %}
                       <img width="130" class="img-thumbnail" src="{{image( photo.getWebPath).resize(100,100)}}" /> 
                    {% endif %} 
                          {% endif %} 
                    {% endfor %}
                </td>
                <td>
                    {{demande.debut|date('d-m-Y')}}
                </td>
                     <td>
                    {{demande.fin|date('d-m-Y')}}
                </td>
                    <td>
                    {{demande.getstatut}}
                    </td>

            </tr>

   {% endfor %}




    </table>
</div> 


<div class ="col-lg-1"></div>
</div> 
